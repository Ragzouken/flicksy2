doctype html
html
    head
        title flicksy 2
        meta(charset="utf-8")
        link(rel="icon" href="data:image/png;base64,")
        // styles
        style#base-style
            include styles/base-style.css
        style#player-style
            include styles/player-style.css
        style#editor-style(data-editor-only)
            include styles/editor-style.css
        // third party libraries
        script(data-editor-only)
            include library/FileSaver.min.js
        // scripts
        script(id="blitsy.js")
            include scripts/blitsy.js
        script(id="text.js")
            include scripts/text.js
        script(id="editors/htmlui.js" data-editor-only)
            include scripts/editors/htmlui.js
        script(id="editors/drawings.js" data-editor-only)
            include scripts/editors/drawings.js
        script(id="editors/scene.js" data-editor-only)
            include scripts/editors/scene.js
        script(id="editors/map.js" data-editor-only)
            include scripts/editors/map.js
        script(id="editors/project.js" data-editor-only)
            include scripts/editors/project.js
        script(id="editors/play.js" data-editor-only)
            include scripts/editors/play.js
        script(id="flicksy.js")
            include scripts/flicksy.js
        script(id="utility.js")
            include scripts/utility.js
        script(id="player.js")
            include scripts/player.js
        script(id="editors/editor.js" data-editor-only)
            include scripts/editors/editor.js
        script(id="main.js")
            include scripts/main.js
    body(onload="start()")
        #sidebar(data-editor-only)
            .container(hidden)
                button(data-tab-toggle="modes/main" data-tab-default) main
                button(data-tab-toggle="modes/picker") picker
                button(data-tab-toggle="modes/color") color
            .container(data-tab-body="modes/main")
                #menu-buttons.button-bag
                    button(data-tab-toggle="sidebar/project" data-tab-default) project
                    button(data-tab-toggle="sidebar/drawings") drawings
                    button(data-tab-toggle="sidebar/scene") scene
                    button(data-tab-toggle="sidebar/map") map
                    button(data-tab-toggle="sidebar/play") play
                    button(data-action="sidebar/save") save
                #menu-content
                    include sidebars/project.pug
                    include sidebars/drawings.pug
                    include sidebars/scene.pug
                    include sidebars/map.pug
                    include sidebars/play.pug
            div(data-tab-body="modes/picker")
                include sidebars/picker.pug
            div(data-tab-body="modes/color")
                include sidebars/color.pug
        #content
            #drawings-scene.scene(hidden data-empty data-editor-only)
            #map-scene.scene(hidden data-empty data-editor-only)
            #scene-scene.scene(hidden data-empty data-editor-only)
            #play-scene.scene(hidden data-empty)
            #manual(data-editor-only)
                //include manual/main.pug
        script#project-data(type="text/json")
            include project.json
        script#font-data(type="text" data-char-width="8" data-char-height="13" data-runs="0-0,32-126,160-544,546-563,592-685,688-750,768-847,864-879,884-885,890-890,894-894,900-908,910-929,931-974,976-1014,1024-1158,1160-1230,1232-1269,1272-1273,1280-1295,1329-1366,1369-1375,1377-1415,1417-1418,1456-1465,1467-1476,1488-1514,1520-1524")
